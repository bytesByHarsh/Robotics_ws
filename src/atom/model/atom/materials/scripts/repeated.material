material Atom
{
  technique
  {
    pass
    {
      texture_unit
      {
        ambient 0 0 0 1
        diffuse 0 0 0 1
        specular 0 0 0 0
        emissive 0 1 0 1
        // Relative to the location of the material script
        texture ../textures/seamless_texture.png
        // Repeat the texture over the surface (4 per face)
        scale 0.5 0.5
        filtering trilinear
      }
    }
  }
}